[ui]
username = Rushi Vishavadia <rushi@xola.com>
editor = vim
commitsubrepos = False
ignore = ~/.hgignore

# Some useful little aliases.
[alias]
stam = status -am
summ = summary
su = summary
fdiff = diff -U 10000000000000

bm = bookmark
bms = bookmarks

lg = log --graph

pb = push -b

revertc = revert -C

# Commit message shortcuts.
cm = commit -m
cws = commit -m 'Whitespace.'

[extdiff]
# cmd.meld = /usr/bin/meld # For ubuntu only
cmd.ksdiff = /usr/local/bin/ksdiff
opts.ksdiff = --changeset --wait --filelist

[extensions]
# sjl.bitbucket.org/hg-prompt
prompt = ~/.dotfiles/libs/hg-prompt/prompt.py
# http://mercurial.selenic.com/wiki/ProgressExtension
progress = 
# http://mercurial.selenic.com/wiki/ColorExtension
color =
# http://mercurial.selenic.com/wiki/RebaseExtension
rebase =
# http://mercurial.selenic.com/wiki/PagerExtension
pager =
# http://mercurial.selenic.com/wiki/ExtdiffExtension
hgext.extdiff = 
# http://mercurial.selenic.com/wiki/GraphlogExtension
graphlog =
mq =
purge =
# http://mercurial.selenic.com/wiki/ConvertExtension
convert =
# Kaleidoscope diff
#hgext.extdiff =

[pager]
pager = LESS='FRX' less
ignore = version, help, update

[merge-tools]
Kaleidoscope.executable = /usr/local/bin/ksdiff
Kaleidoscope.args = --merge --output $output --base $base -- $local $other
